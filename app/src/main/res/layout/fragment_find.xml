<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.tmfortm.shihuo.ui.FindFragment"
    android:background="#F7F7F7">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="#F7F7F7">
        <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/findFragment"
                        android:text="发现"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="?android:actionBarSize"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_action_overflow"
                        android:onClick="popuWindow"
                        android:layout_width="wrap_content"
                        android:layout_height="?android:actionBarSize"/>
                    <android.support.v4.view.ViewPager
                        android:id="@+id/findFragment_hot"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_below="@+id/findFragment"
                        >
                    </android.support.v4.view.ViewPager>
                    <LinearLayout
                        android:id="@+id/findFragment_linear_one"
                        android:layout_below="@id/findFragment_hot"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/findFragment_linear"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:id="@+id/findFragment_linearOne"
                                >
                                <TextView
                                    android:gravity="bottom|center_horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="清单活动"
                                    />
                                <TextView
                                    android:id="@+id/findFragment_linearOne_one"
                                    android:gravity="top|center_horizontal"
                                    android:text="机器人"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:textColor="#F90201"
                                    />
                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/findFragment_linearOne_imgOne"
                                    android:layout_width="100dp"
                                    android:layout_height="80dp"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:id="@+id/findFragment_linearTwo">
                                <TextView
                                    android:gravity="bottom|center_horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="晒物"/>
                                <TextView
                                    android:id="@+id/findFragment_linearOne_two"
                                    android:gravity="top|center_horizontal"
                                    android:text="机器人"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:textColor="#F90201"/>
                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/findFragment_linearOne_imgTwo"
                                    android:layout_width="100dp"
                                    android:layout_height="80dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:id="@+id/findFragment_linearThree">
                                <TextView
                                    android:gravity="bottom|center_horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="众测"/>
                                <TextView
                                    android:id="@+id/findFragment_linearOne_three"
                                    android:gravity="top|center_horizontal"
                                    android:text="机器人"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:textColor="#F90201"/>
                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/findFragment_linearOne_imgThree"
                                    android:layout_width="100dp"
                                    android:layout_height="80dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            />
                        <TextView
                            android:gravity="center"
                            android:background="#fff"
                            android:text="热门清单"
                            android:textColor="#000"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"/>
                        <HorizontalScrollView
                            android:id="@+id/findFragment_scroll"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:scrollbars="none"
                            >
                            <LinearLayout
                                android:id="@+id/findFragment_scroll_linear"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                            </LinearLayout>

                        </HorizontalScrollView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            />

                    </LinearLayout>





                </RelativeLayout>


            </android.support.design.widget.CoordinatorLayout>
        <TextView

            android:gravity="center"
            android:background="#fff"
            android:text="精选推荐"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="30dp"

            />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scrollbars="none">
            <LinearLayout
                android:id="@+id/findFragment_scroll_two_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>
        </HorizontalScrollView>
    </android.support.design.widget.AppBarLayout>


    <!--滑动控件-->
    <!--app:layout_behavior -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/findFragment_Recycler"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </android.support.v7.widget.RecyclerView>
    <ImageView
        android:id="@+id/findFragment_Recycler_top"
        android:layout_gravity="right|bottom"
        android:layout_margin="5dp"
        android:src="@mipmap/dingbu_icon_normal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"/>
</android.support.design.widget.CoordinatorLayout>
