<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.tmfortm.shihuo.ui.SurgingFragment">
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#F7F7F7">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <!--android:background="#EBEBEB"-->
                        <EditText
                            android:id="@+id/surging_search"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/surging_search"
                            android:textSize="14sp"
                            android:hint="请输入产品名或商品名"


                            android:drawableLeft="@mipmap/ic_action_search"/>
                        <ImageView
                            android:src="@mipmap/ic_action_cart"
                            android:layout_gravity="center"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="2dp"/>
                    </LinearLayout>

                </android.support.design.widget.CoordinatorLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="#fff">

                    <android.support.design.widget.TabLayout
                        android:id="@+id/surging_tablayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        app:tabSelectedTextColor="#E33F3B"
                        app:tabIndicatorColor="#E33F3B"
                        app:tabIndicatorHeight="2dp"
                        app:tabMode="scrollable"
                        >

                    </android.support.design.widget.TabLayout>

                    <ImageView
                        android:src="@mipmap/fenlei_list"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/surging_viewpager"
    android:layout_width="match_parent"
    android:layout_height="680dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </android.support.v4.view.ViewPager>
</android.support.design.widget.CoordinatorLayout>
