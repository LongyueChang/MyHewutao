<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_page_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tmfortm.shihuo.ui.HomePageMessageActivity">

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:gravity="center_vertical"
       android:layout_weight="1">
       <ImageView
           android:id="@+id/previous_message_homepage"
           android:src="@mipmap/ic_action_previous_item"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />
       <TextView
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:gravity="center"
           android:text="识货消息"
           android:textColor="#000"
           />
       <ImageView
           android:id="@+id/overflow_message_homepage"
           android:src="@mipmap/ic_action_overflow"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />
   </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_message_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
