<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
                android:padding="3dp"
              android:layout_width="match_parent"
              android:layout_height="350dp"
    android:background="@drawable/touch_bg">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/find_recycler_item_simpledra"
            android:layout_width="50dp"
            android:layout_height="50dp"
            fresco:roundAsCircle="true"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/find_recycler_item_name"
            android:layout_alignTop="@id/find_recycler_item_simpledra"
            android:text="小小财狼"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/find_recycler_item_simpledra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="1202-21-12"
            android:layout_toRightOf="@id/find_recycler_item_simpledra"
            android:layout_below="@id/find_recycler_item_name"
            android:id="@+id/find_recycler_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/find_recycler_item_description"
            android:textSize="16sp"
            android:text="万达速度离开那是假的"
            android:textColor="#000"
            android:layout_below="@id/find_recycler_item_time"
            android:layout_toRightOf="@id/find_recycler_item_simpledra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginTop="5dp"
            android:id="@+id/find_recycler_item_img"
            android:layout_toRightOf="@id/find_recycler_item_simpledra"
            android:layout_below="@id/find_recycler_item_description"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/find_recycler_item_dianzan"
            android:layout_toRightOf="@id/find_recycler_item_simpledra"
            android:layout_below="@id/find_recycler_item_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/sw_dianzan_mormal"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/find_recycler_item_dianzanNUm"
            android:layout_marginLeft="5dp"
            android:text="18"
            android:layout_toRightOf="@id/find_recycler_item_dianzan"
            android:layout_below="@id/find_recycler_item_img"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/find_recycler_item_message"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/find_recycler_item_dianzanNUm"
            android:layout_below="@id/find_recycler_item_img"
            android:src="@mipmap/icon_shiwu_comment"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/find_recycler_item_message_num"
            android:text="33"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/find_recycler_item_message"
            android:layout_below="@id/find_recycler_item_img"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <View
            android:layout_marginTop="10dp"
            android:background="#EEEDF0"
            android:layout_below="@id/find_recycler_item_message"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

</RelativeLayout>