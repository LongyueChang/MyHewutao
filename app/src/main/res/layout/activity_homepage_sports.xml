<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_homepage_sports"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tmfortm.shihuo.ui.HomepageSportsActivity">

    <LinearLayout
        android:background="#1000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/previous_sport_homepage"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_action_previous_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"
            android:text="篮球 BASKETBALL"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_action_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_action_overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_sport_homepage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
