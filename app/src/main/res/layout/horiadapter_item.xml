<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_horiadapter_item"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_widthPercent="33%"
    app:layout_heightPercent="100%"
    >

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/title_horiadapter_item"
        android:textSize="16sp"
        android:textColor="#000"
        android:text="今日优惠"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:text="你好"
        android:layout_below="@id/title_horiadapter_item"
        android:id="@+id/subTitle_horiadapter_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_centerHorizontal="true"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@mipmap/zhanweifu"
        android:layout_below="@id/subTitle_horiadapter_item"
        android:id="@+id/fresco_horiadapter_item"
        android:layout_marginTop="5dp"
        />

</android.support.percent.PercentRelativeLayout>