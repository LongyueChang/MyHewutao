<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="200dp"
              android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_centerHorizontal="true"
        android:id="@+id/fresco_haojia"
        android:layout_width="100dp"
        android:layout_height="80dp"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fresco_haojia"
        android:id="@+id/name_haojia"
        android:layout_width="100dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        />
    <TextView
        android:layout_alignLeft="@id/fresco_haojia"
        android:layout_below="@id/name_haojia"
        android:layout_marginTop="5dp"
        android:id="@+id/price_haojia"
        android:textColor="#f00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toRightOf="@id/price_haojia"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/price_haojia"
        android:id="@+id/maxPrice_haojia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <View
        android:layout_alignBottom="@id/maxPrice_haojia"
        android:layout_alignLeft="@id/maxPrice_haojia"
        android:layout_marginBottom="10dp"
        android:layout_width="40dp"
        android:layout_marginRight="10dp"
        android:background="#4000"
        android:layout_height="1dp"/>
</RelativeLayout>