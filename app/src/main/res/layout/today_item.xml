<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/fresco_today"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/today_title"
        android:layout_alignTop="@id/fresco_today"
        android:layout_toRightOf="@id/fresco_today"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/today_subtitle"
        android:layout_alignLeft="@id/today_title"
        android:layout_below="@id/today_title"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f00"
        />

    <ImageView
        android:id="@+id/local"
        android:src="@mipmap/merchant_icon"
        android:layout_alignBottom="@id/fresco_today"
        android:layout_alignLeft="@id/today_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/today_orginal_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fresco_today"
        android:layout_toRightOf="@id/local"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/today_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fresco_today"
        android:layout_alignParentRight="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1000"
        android:layout_below="@id/fresco_today"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>