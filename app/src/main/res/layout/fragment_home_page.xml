<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tmfortm.shihuo.ui.HomePageFragment"
    >
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/homepage_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f00"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_fragment_homepage"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/search_shape"
            android:drawableLeft="@mipmap/search_icon"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="识货独家搜最全正品低价装备"
            android:textColor="#4000"
            android:textSize="12sp"
            />

        <LinearLayout
            android:id="@+id/message_fragment_homepage"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/news"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="消息"
                android:textColor="#fff"
                android:textSize="10sp"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
